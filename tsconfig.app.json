// tsconfig.app.json
{
  "extends": "./tsconfig.json",       // puxa baseUrl/paths do tsconfig.json
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"],                 // aplica o alias em todo o src/
  "exclude": ["node_modules"]
}